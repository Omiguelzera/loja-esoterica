{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "#components/*": ["./components/*"],
      "#lib/*": ["./lib/*"],
      "#imports": ["./types/nuxt-imports"]
    }
  },
  "include": ["**/*.ts", "**/*.vue", "nuxt.config.ts", "types/**/*.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
